\ProvidesPackage{beamerfontthemectao}[2024/04/29 Unofficial CTAO beamer theme]

\RequirePackage{pgfopts}
\RequirePackage{fontspec}
\RequirePackage{unicode-math}
\usefonttheme{professionalfonts}

\newif\if@interonly\@interonlyfalse
\pgfkeys{
  /ctaotheme/font/.cd,
  inter-only/.code=\@disable@accent,
}

\IfFontExistsTF{Inter}{
  \setsansfont{Inter}
}{
\PackageError{beamerfontthemectao}{Font "Inter" could not be found}{Install the font using "tlmgr install inter" or by downloading and installing manually in your system.}
}

\unimathsetup{
  math-style=ISO,
  bold-style=ISO,
  nabla=upright,
  partial=upright,
  mathrm=sym,
}
\setmathfont{Fira Math}

\IfFontExistsTF{Space Grotesk}{
  \newfontfamily\accentfont{Space Grotesk}
}{
\PackageWarning{beamerfontthemectao}{Font "Space Grotesk" not found, headings will use inter.}
  \newfontfamily\accentfont{Inter}
}

% command to disable space grotesk
\newcommand\@disable@accent{
  \setfontfamily\accentfont{Inter}
}

% frames
\setbeamerfont{frametitle}{family=\accentfont, size=\fontsize{24}{24}}

% titlepage
\setbeamerfont{title}{family=\accentfont, size=\fontsize{32}{32}}
\setbeamerfont{subtitle}{family=\accentfont, size=\fontsize{10}{10}}
\setbeamerfont{author}{family=\accentfont, size=\fontsize{8}{8}}
\setbeamerfont{institute}{family=\accentfont, size=\fontsize{8}{8}}
\setbeamerfont{section in toc}{family=\sffamily, series=\bfseries}

\setbeamerfont{section in head/foot}{size=\fontsize{10}{10}}
